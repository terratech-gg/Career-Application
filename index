    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Position selection
            const positionOptions = document.querySelectorAll('.position-option');
            const positionInput = document.getElementById('position');
            const tracksContainer = document.getElementById('tracksContainer');
            const trackInput = document.getElementById('track');
            const trackOptions = document.querySelectorAll('.track-option');
        
            positionOptions.forEach(option => {
                option.addEventListener('click', function () {
                    positionOptions.forEach(opt => opt.classList.remove('selected'));
                    this.classList.add('selected');
                    positionInput.value = this.dataset.value;
        
                    if (this.dataset.value === 'software' || this.dataset.value === 'ml' || this.dataset.value === 'ai') {
                        tracksContainer.style.display = 'block';
                    } else {
                        tracksContainer.style.display = 'none';
                        trackInput.value = '';
                        trackOptions.forEach(opt => opt.classList.remove('selected'));
                    }
                });
            });
        
            // Track selection
            trackOptions.forEach(option => {
                option.addEventListener('click', function () {
                    trackOptions.forEach(opt => opt.classList.remove('selected'));
                    this.classList.add('selected');
                    trackInput.value = this.dataset.value;
                });
            });
        
            // Form submission
            const applicationForm = document.getElementById('applicationForm');
            const submitBtn = document.getElementById('submitBtn');
            const successMessage = document.getElementById('successMessage');
        
            submitBtn.addEventListener('click', function (e) {
                e.preventDefault();
        
                // Basic validation
                const fullName = document.getElementById('fullName').value;
                const email = document.getElementById('email').value;
                const phone = document.getElementById('phone').value;
                const position = positionInput.value;
                const track = trackInput.value;
                const cvLink = document.getElementById('cvLink').value;
                const experience = document.getElementById('experience').value;
        
                if (!fullName || !email || !phone || !position || !cvLink || !experience) {
                    alert('Please fill in all required fields');
                    return;
                }
        
                const technicalPositions = ['software', 'ml', 'ai'];
                if (technicalPositions.includes(position) && !track) {
                    alert('Please select your specialization track');
                    return;
                }
        
                // Prepare data for Google Sheets
                const formData = {
                    fullName,
                    email,
                    phone,
                    experience,
                    position,
                    track: technicalPositions.includes(position) ? track : 'N/A',
                    cvLink,
                    timestamp: new Date().toLocaleString()
                };
        
                // Show loading state
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
                submitBtn.disabled = true;
        
                // Send data to Google Sheets
                fetch('https://script.google.com/macros/s/AKfycbyMU3As0Eo9WzUByAphqWiVh9pL_i998xCHEvUW6r7gJCtE9zU39hMjwhQJ4QyaA3cK/exec', {
                    method: 'POST',
                    body: JSON.stringify(formData),
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        applicationForm.style.display = 'none';
                        successMessage.style.display = 'block';
        
                        setTimeout(() => {
                            document.getElementById('applicationForm').reset();
                            positionOptions.forEach(opt => opt.classList.remove('selected'));
                            trackOptions.forEach(opt => opt.classList.remove('selected'));
                            tracksContainer.style.display = 'none';
                            applicationForm.style.display = 'block';
                            successMessage.style.display = 'none';
                            submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Submit Application';
                            submitBtn.disabled = false;
                        }, 5000);
                    } else {
                        alert('Something went wrong while submitting your application.');
                        submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Submit Application';
                        submitBtn.disabled = false;
                    }
                })
                .catch(error => {
                    alert('Error: ' + error.message);
                    submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Submit Application';
                    submitBtn.disabled = false;
                });
            });
        });
        </script>
        
